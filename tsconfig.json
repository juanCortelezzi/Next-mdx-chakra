{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@styles/*": [
        "styles/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@typedefs/*": [
        "src/typedefs/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@chakraTheme": [
        "src/chakraTheme.ts"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "mdx.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
